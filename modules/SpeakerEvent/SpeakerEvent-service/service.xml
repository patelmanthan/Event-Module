<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="SpeakerEvent">
	<namespace>FOO</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
    <entity name="Speaker" local-service="true" remote-service="false">
        <column name="speakerId" type="long" primary="true" id-type="increment"></column>
        <column name="userId" type="long"></column>
        <column name="firstName" type="String"></column>
        <column name="lastName" type="String"></column>
        <column name="email" type="String"></column>
        <order by="desc">
            <order-column name="speakerId" order-by="desc"></order-column>
        </order>
        <finder name="speakerId" return-type="Speaker">
            <finder-column name="speakerId"></finder-column>
        </finder>
    </entity>
    <entity name="Speaker_Event" local-service="true" remote-service="false">
        <column name="id" type="long" primary="true"></column>
        <column name="speakerId" type="long"></column>
        <column name="eventId" type="long"></column>
        <finder name="eventId" return-type="Collection">
            <finder-column name="eventId"></finder-column>
        </finder>
        <finder name="speakerId" return-type="Collection">
            <finder-column name="speakerId"></finder-column>
        </finder>
    </entity>
</service-builder>